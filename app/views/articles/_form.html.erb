<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :abstract %>
    <%= f.input :content %>
    <%= f.input :source %>
    <%= f.input :uri %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
